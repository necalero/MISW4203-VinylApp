<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_20ssp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vinilos"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20ssp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_header">

                <LinearLayout
                    android:id="@+id/artists_button"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_header">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/artists_button_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        
                        <ImageView
                            android:id="@+id/artists_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_dark_background"
                            android:scaleType="centerCrop"/>
                        
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/artists_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Artistas"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal|bold"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/collectors_button"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_header">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/colectors_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/colectors_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_dark_background"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/colectors_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Coleccionistas"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal|bold"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/catalogo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20ssp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/linear_selector">

                <TextView
                    android:id="@+id/catalog_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:text="Catalogo"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_view_albums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>